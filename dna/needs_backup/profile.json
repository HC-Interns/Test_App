{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "http://example.com/needs_backup/profile.json",
  "type": "object",
  "required": [
    "age",
    "name",
    "tags"
  ],
  "properties": {
    "age": {
      "maximum": 120,
      "minimum": 0,
      "default": 0,
      "type": "integer"
    },
    "name": {
      "type": "string",
      "pattern": ".+"
    },
    "tags": {
      "default": [
        "user"
      ],
      "items": {
        "type": "string",
        "pattern": ".+"
      },
      "type": "array"
    }
  }
}